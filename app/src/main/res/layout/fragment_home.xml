<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_purple"
    tools:context=".HomeFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <!-- First Row -->
        <ImageView
            android:id="@+id/locationImg1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0"
            android:padding="10dp"
            android:textColor="@color/white"
            android:src="@drawable/balginn"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/locationName1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:text="Balgriffin Inn"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/locationDistance1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:text="1km"
            android:textColor="@color/white" />


        <ImageView
            android:id="@+id/locationDirections1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="@string/directions"
            android:textColor="@color/white"
            android:src="@drawable/baseline_map_24"
            android:tint="@color/white"
            />


        <!-- Second Row -->
        <ImageView
            android:id="@+id/locationImg2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="0"
            android:padding="10dp"
            android:textColor="@color/white"
            android:src="@drawable/cockbull" />

        <TextView
            android:id="@+id/locationName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:text="Cock and Bull"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/locationDistance2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:text="2km"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/locationDirections2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@drawable/baseline_map_24"
            android:tint="@color/white"
            />

        <ImageView
            android:id="@+id/locationImg3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="0"
            android:padding="10dp"
            android:textColor="@color/white"
            android:src="@drawable/viscount"/>

        <TextView
            android:id="@+id/locationName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:text="The Viscount"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/locationDistance3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:text="3km"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/locationDirections3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@drawable/baseline_map_24"
            android:tint="@color/white"/>

        <ImageView
            android:id="@+id/locationImg4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="0"
            android:padding="10dp"
            android:textColor="@color/white"
            android:src="@drawable/goblet"/>

        <TextView
            android:id="@+id/locationName4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:text="The Goblet"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/locationDistance4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:text="4km"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/locationDirections4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@drawable/baseline_map_24"
            android:tint="@color/white" />

    </GridLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:padding="20dp">

        <Spinner
            android:id="@+id/kmSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:fadingEdge="vertical"
            android:padding="10dp"
            android:background="@drawable/distance_spinner"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/generateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:text="Generate"
            android:textSize="20sp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>


</FrameLayout>
